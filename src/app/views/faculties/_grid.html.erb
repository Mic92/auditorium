<div class="span<%=cols%> well-small">
  <h4> <%= link_to faculty, faculty %> </h4>
  <%if  faculty.children.count > 0 %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Institute name</th>
          <th>Chairs</th>
        </tr>
      </thead>
      <tbody>
        <% faculty.children.each do |institute| %>
        <tr>
          <td><%= link_to institute.name, chairs_path(:institute_id => institute.id) %></td>
          <td><%= pluralize(institute.children.count, 'Chair') %></td>
        </tr> 
        <% end %>
      </tbody>
    </table>
  <% end %>

  <hr/>
  <% unless courses.nil? %>
    <em> <%= link_to "#{courses.size} courses subscribed", "my_courses##{faculty}" %>  </em>
  <% end %>
</div>

<% i=i+1 %>
<% if i % (12/cols) == 0 %>
</div> <div class="row-fluid" >
<% end %>
