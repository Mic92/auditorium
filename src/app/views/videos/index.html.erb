<h1>Video√ºbersicht</h1>

<% if can? :create, @course.videos.build %>
	<p><%= link_to t('videos.action.add'), new_course_video_path, class: 'btn btn-primary' %></p>
<% end %>

<% if @videos.size > 0 %>
	<div class="row-fluid" id="grid">
		<% @videos.each_with_index do |video, index| %>
			<div class="span4">
				<div class="well-small">
					<%= link_to image_tag("https://img.youtube.com/vi/#{video.code.to_s}/1.jpg", class: 'youtube-preview'), [@course, video] %>
					<h3><%= link_to video.title, [@course, video] %></h3>
					<p><%= truncate video.description, length: 100 %></p>
				</div>
			</div>

			<% if index+1%3 == 0 %>
				</div>
				<div class="fluid-row" id="grid">
			<% end %> 
		<% end %>
	</div>
<% else %>
<hr />
	<p class="hint">No videos available, yet. <%= link_to "#{t('videos.action.new')}.", new_course_video_path if can? :create, @course.videos.build %></p>
<% end %>