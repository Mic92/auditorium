<h2>Search through auditorium</h2>
<div class="well">
<%= form_tag search_path, :method => 'get', class: 'form-search', :remote => true do %>
  <div class="controls">
    <%= text_field_tag :query, params[:query], :placeholder => "Type in the name of the course, you're searching for...", class: 'span10' %>
    <%= submit_tag 'Search', class: 'btn btn-info span2 hidden-phone' %>
    <% unless params[:q].empty? %>
		<p class="hint"><%= link_to 'Share link to search results.', request.url, 'onclick' => "javascript:window.prompt('Copy link to clipboard: CTRL+C or CMD+C', '#{request.url}')", class: 'copy-link' %></p>
		<% end %>
  </div>
<% end %>
</div>

<h3>Search results</h3>
<div class="search-results">
<%= render 'search/results' %>
</div>