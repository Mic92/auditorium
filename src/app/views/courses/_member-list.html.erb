<tr><td><b><%= pluralize(@course.maintainers.count, 'maintainer') %>:</b></td></tr>
<tr>  
  <% if @course.maintainers.empty? %>
    <td>
      <%= link_to "make me maintainer", new_post_path(:post_type => 'question', :course_id => @course.id, :is_private => true, :subject => "Ich bin Betreuer des Kurses.", :body => "Hallo,\nich bin der Betreuer des Kurses. Bitte authorisieren Sie mich. \nDanke #{current_user.full_name}") %>
    </td>
  <% else %>
    <td>
    <% @course.maintainers.each do |maintainer| %>
      <% if !maintainer.user.nil? %>
        <%= maintainer.user.full_name %><%= "," unless @course.maintainers.last == maintainer %>
      <% end %>
    <% end %>
    </td>
  <% end %>
</tr>

<tr><td><b><%= pluralize(@course.editors.count, 'editor') %>:</b></td></tr>
<tr>
<% if @course.editors.empty? %>
  <td>
    <%= link_to "make me editor", new_post_path(:post_type => 'question', :course_id => @course.id, :is_private => true, :subject => "Ich bin Tutor des Kurses.", :body => "Hallo,\nIch bin ein Tutor des Kurses. Bitte authorisieren Sie mich.\nDanke #{current_user.full_name}") %>
  </td>
<% else %>
  <% @course.editors.each do |editor| %>
    
    <td>
    <% if !editor.user.nil? %>
      <%= editor.user.full_name %><%= "," unless @course.editors.last == editor %>
    <% end %>
    </td>
  <% end %>
<% end %>
</tr>

<tr><td><b><%= pluralize(@course.followers.count, 'member') %>:</b></td></tr>
<tr>
  
  <td>
    <% if (can? :manage, @course) and  @course.followers.count > 0 %>
      <% @course.followers.each do |member| %>
        <%= member.full_name %><%= ',' unless @course.followers.last == member %>
      <% end %>
    <% end %>
  </td>
</tr>