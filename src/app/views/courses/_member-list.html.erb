<p>
  
  <% if @course.maintainers.empty? %>
    <b><%= pluralize(@course.maintainers.count, 'maintainer') %> <%= link_to "make me maintainer", new_post_path(:post_type => 'question', :course_id => @course.id, :is_private => true, :subject => "Ich bin Betreuer des Kurses.", :body => "Hallo,\nich bin der Betreuer des Kurses. Bitte authorisieren Sie mich. \nDanke #{current_user.full_name}") %></b> 
  <% else %>
    <b><%= pluralize(@course.maintainers.count, 'maintainer') %></b>
    <% @course.maintainers.each do |maintainer| %>
      <% if !maintainer.user.nil? %>
        <%= maintainer.user.full_name %><%= "," unless @course.maintainers.last == maintainer %>
      <% end %>
    <% end %>
  <% end %>
</p>
<p>
<% if @course.editors.empty? %>
  <b>no editor <%= link_to "make me editor", new_post_path(:post_type => 'question', :course_id => @course.id, :is_private => true, :subject => "Ich bin Tutor des Kurses.", :body => "Hallo,\nIch bin ein Tutor des Kurses. Bitte authorisieren Sie mich.\nDanke #{current_user.full_name}") %></b> 
<% else %>
  <% @course.editors.each do |editor| %>
    <b><%= pluralize(@course.editors.count, 'editor') %></b>
    <% if !editor.user.nil? %>
      <%= editor.user.full_name %><%= "," unless @course.editors.last == editor %>
    <% end %>
  <% end %>
<% end %>
</p>
<p>
  <b><%= pluralize(@course.followers.count, 'member') %></b>
</p>