  <div class="fields">
    <%= f.label :beginDate %>
    <%= f.date_select :beginDate, :ignore_time => true %>
  </div>
  
  <div class="fields">
    <%= f.label :endDate %>
    <%= f.date_select :endDate, :ignore_time => true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
