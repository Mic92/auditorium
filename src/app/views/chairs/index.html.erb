<h2>Chairs <%= "for #{Institute.find(params[:institute_id])}" if params[:institute_id] %></h2>
<div class="well">
<label for='q'>Search for chairs in all faculties</label>
<%= form_tag search_chairs_path, :method => 'get', class: 'form-search', :remote => true do %>
  <div class="controls">
    <%= text_field_tag :q, params[:q], :placeholder => "Type in the name of the chair, you're searching for...", class: 'span10' %>
    <%= submit_tag 'Search', class: 'btn btn-info span2 hidden-phone' %>
  </div>
  <p class="hint"><%= link_to 'Share link to search results.', request.url, 'onclick' => "javascript:window.prompt('Copy link to clipboard: CTRL+C or CMD+C', '#{request.url}')", class: 'copy-link' %></p>
<% end %>
</div>

<div class="chairs">
<%= render :partial => 'chairs/grid' %>
</div>