<h2>My Faculties</h2>

<%
  cols = 2
  cols = 12/cols
  i = 0
%>

<div class="row-fluid" >
  <% @faculties.each do |faculty, courses|%>
    <div class="span<%=cols%> well-small">
      <h4> <%= link_to faculty, faculty %> </h4>
      <%= link_to "Browse", faculty %>
      <hr/>
      <em> <%= link_to "#{courses.size} courses subscribed", "my_courses##{faculty}" %>  </em>
    </div>

    <% i=i+1 %>
    <% if i % (12/cols) == 0 %>
    </div>

    <div class="row-fluid" >
    <% end %>
  <% end %>
</div>
