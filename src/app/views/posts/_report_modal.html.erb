<div class="modal" id="reportModal">
  <%= form_for(@report = Report.new) do |f| %>
	  <div class="modal-header">
	    <%= link_to 'x', '#', :class => 'close closeButton' %>
	    <h3 id='reportModalLabel'>What the problem with this post?</h3>
	  </div>
	  <div class="modal-body">
	    <%= f.hidden_field :post_id, :value => 0 %>
	     <center><%= f.text_area :body, class: 'span5', :size => '10x4' %></center>
	  </div>
	  <div class="modal-footer">
	    
	    <%= f.submit 'Submit report', class: 'btn btn-primary' %>
			<% end %>
	    <%= link_to 'Close', '#', :class => 'btn closeButton' %>
	  </div>
</div>