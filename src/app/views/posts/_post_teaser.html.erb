<table class="table-posts">
  <tbody>
    <tr>
      <% if post.post_type.eql? 'question' %>
        <td rowspan="2" class="post-badge question-badge">&nbsp;</td> 
      <% elsif post.post_type.eql? 'info' %>
        <td rowspan="2" class="post-badge info-badge">&nbsp;</td>
      <% end %>
      <td colspan="1"><% if not post.post_type.eql? 'answer' %>
        <h3 class="post-subject"><%= link_to post.subject, post_path(post) %></h3>
      <% end %>
    <tr><td class="post-footer"><%= render :partial => 'posts/post_meta_data', :locals => { :post => post } %></td></tr>
  </tbody>
</table>

<% if params[:controller].eql? 'posts'%>
<table class="table-comments"> 
    <% post.comments.each do |comment| %>
      <tr><td><%= render :partial => 'posts/comment', :locals => {:comment => comment }%></td></tr>
    <% end %>
</table>
<%= render :partial => 'posts/comment_form', :locals => {:post => post } %>
<% end %>