<span class="post-metadata">
  <% if params[:controller].eql? 'home' or params[:controller].eql? 'courses' %>
    <% if post.answered? %>
      <span class="icon-ok answered" title="This question was answered."></span>
      &middot;
    <% end %>
    <% if post.post_type.eql? 'question' %>
      <%= link_to "#{post.answers.count} answers", post_path(post) %> 
       &middot;
    <% else %>
    <%= link_to "#{post.comments.count} comments", post_path(post) %>
    <% end %>
     &middot; 
  <% end %>
  
  <% if post.author.id == current_user.id %>
    <%= link_to "by me", post.author %> 
  <% else %>
    <%= link_to "by #{post.author_name}", post.author %>
  <% end %>
  &middot;
  <%= link_to "#{distance_of_time_in_words(Time.now, post.created_at)} ago", post_url(post.origin, :anchor => "post-#{post.id}"), :class => 'permalink', 'data-id' => "#{post.id}", :id => "post-#{post.id}", title: 'Get permalink for this post.' %>

  <% if current_user.admin? or (!params[:controller].eql? 'home' and !params[:controller].eql? 'courses') %>
  <span class="pull-right">
    <% if can? :report, post %>
      <%= link_to '#', :class => "submit-report", 'data-id' => post.id do %><i class="icon-flag"></i> report<% end %>
      
    <% end %> 
    <% if can? :destroy, post  %>
      &middot; 
      <%= link_to post, :data => { :confirm => 'Are you sure that you want to remove this post?' }, method: :delete do %><i class="icon-remove"></i> remove<% end %>
    <% end %>
    <% if can? :update, post %>
      &middot;
      <%= link_to edit_post_path(post) do %><i class="icon-edit"></i> edit<% end %> <%= "(#{distance_of_time_in_words(Time.now, post.updated_at) } ago)" if (post.updated_at.to_i - post.created_at.to_i) > 0 %>
    <% else %>
      &middot;
      <%= "edit #{distance_of_time_in_words(Time.now, post.updated_at) } ago" if (post.updated_at.to_i - post.created_at.to_i) > 0 %>
    <% end %>
  </span>
  <% end %>
</span>
