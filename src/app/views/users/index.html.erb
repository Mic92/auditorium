<div class="span8 center">
<h2>Top-Users</h2>
<p>Compare your ranking with other users. Later you can earn badges!</p>

  <table class="table">
    <thead>
      <tr>
        <td></td>
        <th>Name</th>
        <th>Score</th>
      </tr>
    </thead>
    <tbody class="table-condensed table-striped">

      <% params[:page].nil? ? page = 0 : page = params[:page].to_i-1 %> 
      <% @users.each_with_index do |user, i| %>
        <tr>
          <td width="35" style="border:0px; text-align:center;"><%= i + 1 + 10*page %></td>
          <td><%= link_to user.full_name, user_path(user) %></td>
          <td><%= user.score %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @users %>
</div>
