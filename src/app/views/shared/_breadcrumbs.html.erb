<% if params[:action] == 'show' and ["faculties","institutes","chairs","lectures","courses"].include? params[:controller] %>

<ul class="breadcrumb">

        
  <% for item, index in item_parents %>
    <li>
    <% unless item_parents.index(item)  == 0 %>
      <span class="icon-chevron-right"></span>
    <% end %>
    <%= link_to item, item%>
    </li>
  <% end %>
</ul>

<% end %>
