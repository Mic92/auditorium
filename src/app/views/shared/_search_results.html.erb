<% if params[:query] and @results %>
<div class="well">
  <% if @results[:courses].count > 0 %>
    <h3><%= pluralize(@results[:courses].count, 'Course') %></h3>
    <table class="table">
      <% @results[:courses].each do |course| %>
      <tr><td><%= link_to course.name_with_term, course %></td></tr>
      <% end %>
    </table>
  <% end %>
  
  <% if @results[:posts].count > 0 %>
    <h3><%= pluralize(@results[:posts].count, 'Post') %></h3>
    <table class="table">
      <% @results[:posts].each do |post| %>
      <tr><td><%= link_to post.subject, post.origin %> (<%= post.course.name_with_term %>)</td></tr>
      <% end %>
    </table>
  <% end %>
</div>
<% elsif params[:query] and not @results %>
  <p><%= "No results found for #{params[:query]}." %></p>
<% end %>
