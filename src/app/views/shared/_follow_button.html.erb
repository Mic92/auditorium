
<% if current_user and current_user.subscribed_to?(course) %>
    <%= button_to t("unsubscribe"), follow_course_path(course), :name => 'unfollow', :class => "follow-button btn btn-info btn-mini", 'data-id' => "#{course.id}", :disabled => should_be_disabled?, 'data-disable-with' => 'loading...', :id => 'follow-button', rel: 'tooltip', title: t("unsubscribe-title"), 'data-placement' => 'right', :remote => true %>
<% else %>
    <%= button_to t("subscribe"), follow_course_path(course), :name => 'follow', :class => "follow-button highlight btn btn-mini", 'data-id' => "#{course.id}", :disabled => should_be_disabled?, 'data-disable-with' => 'loading...', :id => 'follow-button', rel: 'tooltip', title: t("subscribe-title"), 'data-placement' => 'right', :remote => true   %>
<% end %>
