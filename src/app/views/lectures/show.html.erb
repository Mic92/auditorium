<!-- Lecture -->

<header>
<h2><%= @lecture.name %></h2>
<h3><%= @lecture.chair.name%> <small><%= @lecture.chair.institute.name%></small></h3>
</header>

<div class="container">
<% if @lecture.description and not @lecture.description.eql? "null" %>
  <p><%= @lecture.description %></p>
<% else %>
  <p>There's no description available, yet!</p>
<% end %>

<h3>Courses in this lecture <small>You can't find the correct course? <%= link_to 'Create it and we will approve it', new_course_path %>.</small></h3>
<% if @lecture.courses.count > 0 %>
  
  <% @lecture.courses.each do |course| %>
    <%= render :partial => 'courses/single_course', :locals => { :course => course }%>
  <% end %>
<% else %>
  <p class="hint">There are no courses yet.
    <% if user_signed_in? and current_user.admin? %>
    <%= link_to 'Create a new course.', new_course_path(:lecture_id => @lecture.id) %>
    <% end %>
  </p>
<% end %>
<%= render "lectures/access_buttons", :lecture=> @lecture%>

</div>