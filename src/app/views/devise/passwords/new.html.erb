<div class="container span6 center">
  
  <% devise_error_messages! %>
  <h2>Forgot your password?</h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <fieldset class="well span4">
    <div class="control-group">

      <div class="controls">
        <%= f.email_field :email, :placeholder => 'Email address', :class => "span4"%>

      </div>
      <%= f.submit "Send me a reset password instruction", :class => 'btn btn-large btn-primary span4', 'data-disable-with' => 'Sending email...' %>
      <p class='help-block'><%= render :partial => "devise/shared/links" %></p>
    </div>

    
    </fieldset>
  <% end %>
</div>
