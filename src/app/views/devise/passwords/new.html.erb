<div class="center container span4">
  <% devise_error_messages! %>
  <h2>Forgot your password?</h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <fieldset class="well">
    <div class="control-group">
        <%= f.label :email, 'Email address', :class => 'accessibility'%>
      <div class="controls">
        <%= f.email_field :email, :placeholder => 'Email address', :class => "span4"%>
      </div>
    </div>
    
    <div class="controls">
      <%= f.submit "Send me a reset password instruction", :class => 'btn btn-large btn-primary span4', 'data-disable-with' => 'Sending email...' %>
    </div>
    <hr />
      <p class='help-block'><%= render :partial => "devise/shared/links" %></p>
  </fieldset>
  <% end %>
</div>
